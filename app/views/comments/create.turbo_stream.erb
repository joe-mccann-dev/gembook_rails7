<%= turbo_stream.replace "flash-message" do %>
  <%= render "shared/turbo-flash-message" %>
<% end %>


<% if @commented_object.is_a?(Comment) %>
  <%# append a reply to a comment %>
  <%= turbo_stream.append "comment-#{@commented_object.id}-replies" do %>
    <%= turbo_frame_tag @comment do %>
      <%= render "comments/comment", comment: @comment %>
    <% end %>
  <% end %>

<% else %>
  <%# append a comment to a post %>
  <%= turbo_stream.append "post-comments" do %>
    <%= turbo_frame_tag @comment do %>
      <%= render "comments/comment", comment: @comment %>
    <% end %>
  <% end %>
<% end %>
